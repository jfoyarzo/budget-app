<% provide(:title, "Log in".upcase) %>
<% provide(:link, "/") %>

<div class="form-wrapper px-0 has-background-grey-lighter has-text-centered has-text-grey-light">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "has-text-centered" }) do |f| %>
    <div class="field mb-0">
      <%= f.email_field :email,
                    autofocus: true,
                    autocomplete: "email",
                    placeholder: "Email",
                    class: "input px-3 mt-5" %>
    </div>

    <div class="field">
      <%= f.password_field :password,
                       autocomplete: "current-password",
                       placeholder: "Password",
                       class: "input px-3" %>
    </div>

    <div class="actions">
      <%= f.submit "Log in", class: 'button is-primary is-medium mb-3 mt-5' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
